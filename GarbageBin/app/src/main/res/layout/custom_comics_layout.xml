<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relyt_whole"
    android:layout_width="match_parent"
    android:background="@color/cream_color"

    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/relyt_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/flyt_imv"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/view"
                android:layout_width="2dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="#BABABA" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/dots_comic"/>


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/lyt_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/flyt_imv"
            android:padding="10dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/comics_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/pic_one"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/lyt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/lyt_img"
            android:orientation="vertical">


            <TextView
                android:id="@+id/comic_heading_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:singleLine="true"
                android:textSize="16sp"
                android:textColor="@android:color/black"/>

        </LinearLayout>

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:padding="10dp"
            android:layout_toRightOf="@+id/flyt_imv"
            android:background="#BABABA" />


    </RelativeLayout>



</RelativeLayout>