<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_feedback_lyt"
    android:background="@color/cream_color">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center|top"

            android:gravity="center|top"
            android:orientation="vertical"
            android:padding="15dp" >

            <EditText
                android:id="@+id/et_feedback_contact"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="top"
                android:layout_marginTop="35dp"
                android:background="@drawable/grey_bg"
                android:clickable="true"
                android:ellipsize="start"
                android:ems="10"
                android:focusable="true"
                android:gravity="top"
                android:hint="Submit your story.."
                android:imeOptions="normal"
                android:inputType="textMultiLine"
                android:padding="12dp"
                android:text=""
                android:textColor="@color/light_black"
                android:textColorHint="@color/light_black"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btn_send_feedback"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@color/blue_header"
                android:clickable="true"
                android:gravity="center"
                android:padding="5dp"
                android:textAllCaps="false"
                android:text="Send and Email Story"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold" >
            </Button>

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>