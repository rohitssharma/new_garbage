<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream_color"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="5dp"
            android:elevation="5dp"
            android:translationZ="15dp"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="6dp">

                <com.garbagebin.fonts_classes.GothamBookTextView
                    android:id="@+id/feature_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:layout_weight="0.7"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:layout_marginRight="25dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|right"

                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/view"/>
                        <com.garbagebin.fonts_classes.GothamBookTextView
                            android:id="@+id/featureviews_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="sdsdf"
                            android:textColor="@color/light_text_color"
                            android:layout_marginLeft="5dp"
                            android:textSize="12sp"
                            android:singleLine="true"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|right"
                        android:layout_marginTop="2dp"
                        android:orientation="horizontal">
                        <com.garbagebin.fonts_classes.GothamBookTextView
                            android:id="@+id/featuretym_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/light_text_color"
                            android:layout_marginLeft="5dp"
                            android:textSize="12sp"
                            android:singleLine="true"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:src="@drawable/dot"/>
                    </LinearLayout>



                </LinearLayout>

            </LinearLayout>

          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="right"
              android:src="@drawable/feature"/>

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:id="@+id/feature_imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <ImageView
                    android:id="@+id/feature_play_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/video_button"/>

                <FrameLayout
                    android:id="@+id/feature_comic_strip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">
                    <!--<org.lucasr.twowayview.TwoWayView-->
                    <!--android:id="@+id/lvItems"-->
                    <!--style="@style/TwoWayView"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:drawSelectorOnTop="false"-->
                    <!--/>-->
                    <Gallery
                        android:id="@+id/feature_custom_gallery"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                    </Gallery>
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        >
                        <LinearLayout
                            android:id="@+id/comic_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        </LinearLayout>
                    </HorizontalScrollView>
                    <ImageView
                        android:id="@+id/timeline_comic_leftimg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:layout_marginRight="5dp"
                        android:padding="15dp"
                        android:src="@drawable/left_arrow"/>

                    <ImageView
                        android:id="@+id/timeline_comic_rightimg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|right"
                        android:layout_marginRight="5dp"
                        android:padding="15dp"
                        android:src="@drawable/right_arrow"/>
                </FrameLayout>


            </FrameLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_margin="5dp"
                android:background="@color/light_text_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:weightSum="1"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:layout_weight="0.5"
                    android:layout_marginLeft="5dp"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/like_imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/like"/>

                    <ImageView
                        android:id="@+id/comment_imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/comment"/>

                    <ImageView
                        android:id="@+id/share_imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/share"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/comments_like_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|right"
                    android:layout_weight="0.5"
                    android:orientation="vertical">
                    <com.garbagebin.fonts_classes.GothamBookTextView
                        android:id="@+id/likes_count_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/light_text_color"
                        android:layout_marginLeft="5dp"
                        android:textSize="14sp"
                        android:singleLine="true"
                        />
                    <com.garbagebin.fonts_classes.GothamBookTextView
                        android:id="@+id/comments_count_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/light_text_color"
                        android:layout_marginLeft="5dp"
                        android:textSize="14sp"
                        android:singleLine="true"
                        />
                </LinearLayout>
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_margin="5dp"
                android:background="@color/light_text_color"/>
        </LinearLayout>



    </FrameLayout>

</LinearLayout>
