<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/cream_color"

    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:fillViewport="true"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:padding="5dp"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/add_address_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:text="@string/add_address_textview"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@color/light_text_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/fullName_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:hint="@string/fullName_edittext"
                    android:textSize="16sp"
                    android:background="@drawable/shipping_address_bg"/>


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <Spinner
                        android:id="@+id/orderPlace_spinner"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shipping_address_bg"
                        />

                    <TextView
                        android:id="@+id/orderPlace_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:gravity="center|left"
                        android:layout_gravity="center|left"
                        android:text="@string/orderPlace_tv"
                        android:padding="8dp"/>

                </FrameLayout>

                <EditText
                    android:id="@+id/et_address_order"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="top"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shipping_address_bg"
                    android:clickable="true"
                    android:ellipsize="start"
                    android:ems="10"
                    android:focusable="true"
                    android:gravity="top"
                    android:hint="Address"
                    android:imeOptions="normal"
                    android:inputType="textMultiLine"
                    android:padding="12dp"
                    android:text=""
                    android:textSize="16sp" />
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <Spinner
                        android:id="@+id/country_spinner"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shipping_address_bg"
                        />

                    <TextView
                        android:id="@+id/country_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:gravity="center|left"
                        android:layout_gravity="center|left"
                        android:text="@string/orderPlace_tv"
                        android:padding="8dp"/>

                </FrameLayout>

                <EditText
                    android:id="@+id/city_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_marginTop="10dp"
                    android:hint="@string/city_edittext"
                    android:textSize="16sp"
                    android:background="@drawable/shipping_address_bg"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:layout_marginRight="10dp"
                        android:orientation="horizontal">
                        <EditText
                            android:id="@+id/state_edittext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:layout_marginTop="10dp"
                            android:hint="@string/state_edittext"
                            android:textSize="16sp"
                            android:background="@drawable/shipping_address_bg"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:orientation="horizontal">
                        <EditText
                            android:id="@+id/zipcode_edittext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:layout_marginTop="10dp"
                            android:hint="@string/zipcode_edittext"
                            android:textSize="16sp"
                            android:background="@drawable/shipping_address_bg"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:background="@color/light_text_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/save_button"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/orange_dark"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/save_button"
                    android:textColor="@color/white"
                    android:elevation="10dp"
                    android:translationZ="10dp"
                    android:textAllCaps="false"
                    android:layout_marginRight="3dp"/>

                <Button
                    android:id="@+id/cancel_button"
                    android:layout_weight="1"
                    android:layout_marginLeft="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/dark_color"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/cancel_button"
                    android:textColor="@color/white"
                    android:elevation="10dp"
                    android:translationZ="10dp"
                    android:textAllCaps="false"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>
